[[ -f "${TM_SUPPORT_PATH}/lib/bash_init.sh" ]] &amp;&amp; . "${TM_SUPPORT_PATH}/lib/bash_init.sh"

cd "$TM_PROJECT_DIRECTORY"

ruby18 -r "$TM_SUPPORT_PATH/lib/shelltokenize.rb" &lt;&lt;END
